@page "/contact"

<h2>Contact Me</h2>
<form onsubmit="redirectToWhatsApp(event)">
    <div class="mb-3">
        <input id="name" class="form-control" placeholder="Your Name" required />
    </div>
    <div class="mb-3">
        <input id="message" class="form-control" placeholder="Project Details" required />
    </div>
    <button type="submit" class="btn btn-success">Send via WhatsApp</button>
</form>

<script>
    function redirectToWhatsApp(e) {
        e.preventDefault();
        const name = document.getElementById('name').value;
        const msg = document.getElementById('message').value;
        const fullMsg = encodeURIComponent(`Hi, I am ${name}, I want to discuss: ${msg}`);
        window.location.href = `https://wa.me/917048311993?text=${fullMsg}`;
    }
</script>